@model Application.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form id="account" method="post" class="form-signin text-center">

    <img class="mb-4" src="~/assets/images/voyage-logo.svg" alt="" width="300" height="100" />
    <h1 class="h4 mb-3 font-weight-normal">Please log in</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" required autofocus placeholder="Email" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" class="form-control" required placeholder="Password"/>
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me" asp-for="RememberMe"> Remember me
            </label>
        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-lg btn-outline-primary btn-block">Log in</button>
    </div>
    <div class="form-group">
        <p>
            <a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
        </p>
    </div>
</form>
