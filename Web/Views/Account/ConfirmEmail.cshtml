@model Application.ViewModels.ConfirmEmailViewModel
@{
    ViewData["Title"] = "Finish registration";
}

<form class="form-signin text-center" method="post">

    <img class="mb-4" src="~/assets/images/voyage-logo.svg" alt="" width="72" height="57" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <h1 class="h4 mb-3 fw-normal">Please enter password to finish registration</h1>

    <div class="form-floating">
        <input asp-for="Password" class="form-control" placeholder="Password">
        <label asp-for="Password"></label>
    </div>
    <div class="form-floating">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
        <label asp-for="ConfirmPassword"></label>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Sign up</button>
    <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
</form>